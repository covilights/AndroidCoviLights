<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_onboarding"
    app:startDestination="@id/onboardingFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.covilights.view.main.MainActivity"
        android:label="main_activity"
        tools:layout="@layout/main_activity" />

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.covilights.view.onboarding.OnboardingFragment"
        android:label="onboarding_fragment"
        tools:layout="@layout/onboarding_fragment">

        <action
            android:id="@+id/action_onboardingFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <include app:graph="@navigation/main_nav_graph" />
</navigation>
