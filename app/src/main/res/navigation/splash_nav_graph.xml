<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_splash"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.covilights.view.splash.SplashFragment"
        android:label="splash_fragment"
        tools:layout="@layout/splash_fragment">
        <action
            android:id="@+id/action_splashFragment_to_onboardingActivity"
            app:destination="@id/onboardingActivity" />
        <action
            android:id="@+id/action_splashFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="com.covilights.view.main.MainActivity"
        android:label="main_activity"
        tools:layout="@layout/main_activity" />

    <activity
        android:id="@+id/onboardingActivity"
        android:name="com.covilights.view.onboarding.OnboardingActivity"
        android:label="onboarding_activity"
        tools:layout="@layout/onboarding_activity" />
    <include app:graph="@navigation/main_nav_graph" />
    <include app:graph="@navigation/onboarding_nav_graph" />
</navigation>
